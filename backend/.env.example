# MySQL 数据库配置
DATABASE_USER=root
DATABASE_PASSWORD=your_password
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=wangfeng_fan_website

# 阿里云 OSS 存储配置示例
# 复制此文件为 .env 并填入你的真实配置

# ============= 存储类型配置 =============
# 可选值: "minio", "r2", "oss", "local"
STORAGE_TYPE=oss

# ============= 阿里云 OSS 配置 =============
# OSS Endpoint（不包含 bucket 名称）
# 示例: oss-cn-hangzhou.aliyuncs.com, oss-cn-beijing.aliyuncs.com
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# OSS AccessKey（从 RAM 控制台获取）
OSS_ACCESS_KEY=

# OSS SecretKey（从 RAM 控制台获取）
OSS_SECRET_KEY=

# OSS Bucket 名称
OSS_BUCKET=wangfeng-fan-website

# OSS 自定义域名（可选，如果配置了 CNAME）
# 如果不配置，将使用默认格式: bucket.endpoint
# OSS_CUSTOM_DOMAIN=img.yourdomian.com

# 行程默认海报（可选，用于未上传海报或批量替换）
# SCHEDULE_DEFAULT_POSTER_URL=https://your-oss-domain/schedules/default/default-poster.jpg

# ============= 数据库配置 =============
DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/wangfeng_fan_website

# ============= JWT 配置 =============
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============= 邮件配置（可选） =============
SMTP_HOST=smtpdm.aliyun.com
SMTP_PORT=25
SMTP_USERNAME=noreply@wfnb.cc
SMTP_PASSWORD=your_email_password
SENDER_EMAIL=noreply@wfnb.cc
SENDER_NAME=感受峰 感受存在
# ============= 应用配置 =============
DEBUG=False
BACKEND_PORT=1994
