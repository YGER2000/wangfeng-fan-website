# MySQL 数据库配置
DATABASE_USER=root
DATABASE_PASSWORD=your_password
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=wangfeng_fan_website

# 阿里云 OSS 存储配置示例
# 复制此文件为 .env 并填入你的真实配置

# ============= 存储类型配置 =============
# 可选值: "minio", "r2", "oss", "local"
STORAGE_TYPE=oss

# ============= 阿里云 OSS 配置 =============
# OSS Endpoint（不包含 bucket 名称）
# 示例: oss-cn-hangzhou.aliyuncs.com, oss-cn-beijing.aliyuncs.com
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# OSS AccessKey（从 RAM 控制台获取）
OSS_ACCESS_KEY_ID=your_access_key_id

# OSS SecretKey（从 RAM 控制台获取）
OSS_ACCESS_KEY_SECRET=your_access_key_secret

# OSS Bucket 名称
OSS_BUCKET_NAME=

# OSS 基础 URL（用于前端访问）
# 格式: https://bucket-name.endpoint
OSS_BASE_URL=https://wangfeng-fan-website.oss-cn-hangzhou.aliyuncs.com

# 音乐文件 OSS 基础 URL（可选，如果音乐存储在不同 bucket）
# 如果不配置，将使用 OSS_BASE_URL
MUSIC_OSS_BASE_URL=https://wangfeng-fan-website.oss-cn-hangzhou.aliyuncs.com

# ============= 数据库配置 =============
DATABASE_URL=mysql+pymysql://root:your_password@localhost:3306/wangfeng_fan_website

